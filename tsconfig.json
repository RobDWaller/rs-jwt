{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "removeComments": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
